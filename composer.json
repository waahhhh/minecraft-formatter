{
    "name": "waahhhh/minecraft-formatter",
    "description": "A library for translating the Minecraft formatting codes into another format.",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "stable",
    "config": {
        "sort-packages": true,
        "process-timeout": 1200
    },
    "autoload": {
        "psr-4": {
            "Waahhhh\\MinecraftFormatter\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Waahhhh\\MinecraftFormatterTest\\": "tests/"
        }
    },
    "require": {
        "php": "^7.4",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "maglnet/composer-require-checker": "^2.1",
        "php-parallel-lint/php-parallel-lint": "^1.2",
        "phpmd/phpmd": "^2.9",
        "phpro/grumphp": "^1.0",
        "phpstan/phpstan": "^0.12.51",
        "phpunit/phpunit": "^9.4",
        "sensiolabs/security-checker": "^6.0",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "scripts": {
        "check": "grumphp run"
    }
}
